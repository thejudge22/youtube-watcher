# Database
DATABASE_URL=sqlite+aiosqlite:///./data/youtube-watcher.db
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Set to true to require login before accessing the application
# When enabled, AUTH_USERNAME and AUTH_PASSWORD_HASH are required
AUTH_ENABLED=false

# Username for login (only used if AUTH_ENABLED=true)
AUTH_USERNAME=admin

# Hashed password in Base64 format (only used if AUTH_ENABLED=true)
# Generate using: ./scripts/generate-password-hash.sh YOUR_PASSWORD
# Example hash for password 'changeme' (~64 characters):
# AUTH_PASSWORD_HASH=3f9a2b1c4d5e6f708192a3b4c5d6e7f8091a2b3c4d5e6f708192a3b4c5d6e7f8a1b2c3d4e5f60718293a4b5c6d7e8f90a1b2c3d4e5f60718293a4b5c6d7e8f9
AUTH_PASSWORD_HASH=

# JWT configuration (optional, auto-generated if not provided)
# JWT_SECRET_KEY=your-secret-key-here
# JWT token expiration in hours (default: 336 = 14 days)
# JWT_EXPIRE_HOURS=336
